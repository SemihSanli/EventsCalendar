@model EventCalendar.Entities.Event
@{
    ViewBag.Title = "UpdateEventDate";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Etkinliği Güncelle</h2>

@using (Html.BeginForm("UpdateEventDate", "Event", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.EventId)
    <div class="form-group">
        <label for="Title">Başlık</label>
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control", required = "required" })
    </div>
    <div class="form-group">
        <label for="CategoryId">Kategori</label>
        @Html.DropDownList("CategoryId", new SelectList(ViewBag.Categories, "CategoryId", "Name", Model.CategoryId), "Seçiniz", new { @class = "form-control", required = "required" })
    </div>
    <button type="submit" class="btn btn-primary">Güncelle</button>
}

